<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:padding="10dp"
    android:elevation="5dp"
    android:orientation="horizontal"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">


    <TextView
        android:id="@+id/dateHolder"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textColor="@color/deepgreen"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



    <TextView
        android:id="@+id/departureHolder"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/dateHolder"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/carImg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/car"
        app:layout_constraintTop_toBottomOf="@id/dateHolder"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@id/departureHolder"
        app:layout_constraintRight_toLeftOf="@id/arrivalHolder"
        />

    <TextView
        android:id="@+id/arrivalHolder"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"

        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toRightOf="@id/departureHolder"
        app:layout_constraintTop_toBottomOf="@id/dateHolder" />

    <TextView
        android:id="@+id/seatsHolder"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/dateHolder"
        android:layout_marginLeft="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:id="@+id/seatsImg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/seat"
        app:layout_constraintRight_toLeftOf="@id/seatsHolder"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/rideNumberHolder"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/rideNumberHolder"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />





</androidx.constraintlayout.widget.ConstraintLayout>